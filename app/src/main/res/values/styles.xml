<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BookletTextViewHead" parent="android:Widget.TextView">
        <item name="android:textColor">#efc8bf</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="BookletTextViewSubHead" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="BookletTextViewNormal" parent="android:Widget.TextView">
        <item name="android:layout_gravity">left</item>
    </style>
</resources>
